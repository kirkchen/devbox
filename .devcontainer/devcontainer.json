{
  "name": "DevContainer",
  "build": {
    "dockerfile": "./Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.fontFamily": "'SauceCodePro Nerd Font', 'SauceCodePro NF', 'MesloLGS NF', 'Hack Nerd Font', monospace",
        "terminal.integrated.fontSize": 14,
        "terminal.integrated.lineHeight": 1.2,
        "terminal.integrated.letterSpacing": 0,
        "terminal.integrated.fontWeight": "normal",
        "terminal.integrated.fontWeightBold": "bold",
        "terminal.integrated.gpuAcceleration": "off",
        "terminal.integrated.rendererType": "dom"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": false,
      "username": "vscode",
      "userUid": "1000",
      "userGid": "1000",
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/schlich/devcontainer-features/playwright:0": {}
  },
  // Set up dotfiles automatically if environment variables are set, otherwise show welcome message
  "postCreateCommand": "echo 'alias setup-dotfiles=\"bash /workspaces/devbox/.devcontainer/scripts/setup-dotfiles.sh\"' >> ~/.bashrc && echo 'alias setup-dotfiles=\"bash /workspaces/devbox/.devcontainer/scripts/setup-dotfiles.sh\"' >> ~/.zshrc && if [ -n \"$DEVBOX_USER_NAME\" ] && [ -n \"$DEVBOX_USER_EMAIL\" ]; then bash /workspaces/devbox/install.sh; else bash /workspaces/devbox/.devcontainer/scripts/welcome.sh; fi",
  "remoteUser": "vscode",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  // Environment variables for git configuration
  "remoteEnv": {
    "DEVBOX_USER_NAME": "${localEnv:DEVBOX_USER_NAME:Kirk Chen}",
    "DEVBOX_USER_EMAIL": "${localEnv:DEVBOX_USER_EMAIL:rwk0119@yahoo.com.tw}"
  }
}